<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".BookClickedActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_view"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp"
            android:paddingTop="72dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/literature_2"
                android:layout_marginBottom="24dp"
                android:contentDescription="Bìa sách" />

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/times"
                android:gravity="center"
                android:text="Book Title"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author here"
                android:fontFamily="@font/times"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/book_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of Book"
                    android:fontFamily="@font/times"
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_gray_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:fontFamily="@font/times"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

<!--                <TextView-->
<!--                    android:id="@+id/tvPublishedYear"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Year of published"-->
<!--                    android:fontFamily="@font/times"-->
<!--                    android:textColor="@android:color/white"-->
<!--                    android:textSize="14sp"-->
<!--                    android:layout_marginBottom="2dp"/>-->
                <TextView
                    android:id="@+id/tvPageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="counting page"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/times"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_read_sample"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Preview"
                        android:backgroundTint="@color/black"
                        android:textColor="@android:color/white"
                        android:drawableStart="@android:drawable/ic_menu_agenda"
                        android:paddingStart="16dp"
                        android:fontFamily="@font/times"
                        android:paddingEnd="16dp"
                        android:drawableTint="@android:color/holo_blue_light"
                        android:layout_marginEnd="8dp"
                        android:textAllCaps="false"
                        app:cornerRadius="10dp"/>

                    <Button
                        android:id="@+id/btn_get"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Save"
                        android:fontFamily="@font/times"
                        android:backgroundTint="@color/black"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:textAllCaps="false"
                        app:cornerRadius="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"> <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/times"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_book_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times"
                    android:textColor="#E0E0E0"
                    android:text="description here"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#333333"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@android:color/white" />
</RelativeLayout>